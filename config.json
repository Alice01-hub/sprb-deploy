{
  "project": {
    "name": "Summer Pockets 巡礼网站",
    "version": "1.0.0",
    "description": "Summer Pockets圣地巡礼网站部署版本",
    "author": "Agent_小苍",
    "created_date": "2025-08-11"
  },
  "environments": {
    "development": {
      "backend": {
        "host": "127.0.0.1",
        "port": 8000,
        "reload": true,
        "workers": 1,
        "log_level": "DEBUG"
      },
      "frontend": {
        "host": "127.0.0.1",
        "port": 3000,
        "dev_mode": true
      },
      "database": {
        "type": "sqlite",
        "path": "./data/traffic_cards.db"
      }
    },
    "staging": {
      "backend": {
        "host": "0.0.0.0",
        "port": 8000,
        "reload": false,
        "workers": 2,
        "log_level": "INFO"
      },
      "frontend": {
        "host": "0.0.0.0",
        "port": 3000,
        "dev_mode": false
      },
      "database": {
        "type": "sqlite",
        "path": "./data/traffic_cards.db"
      }
    },
    "production": {
      "backend": {
        "host": "0.0.0.0",
        "port": 8000,
        "reload": false,
        "workers": 4,
        "log_level": "WARNING"
      },
      "frontend": {
        "host": "0.0.0.0",
        "port": 3000,
        "dev_mode": false
      },
      "database": {
        "type": "sqlite",
        "path": "./data/traffic_cards.db"
      }
    }
  },
  "features": {
    "authentication": true,
    "file_upload": true,
    "music_player": true,
    "map_integration": true,
    "performance_monitoring": true,
    "backup_system": true
  },
  "security": {
    "cors_enabled": true,
    "rate_limiting": true,
    "jwt_expiration": 3600,
    "max_file_size": 10485760,
    "allowed_file_types": ["jpg", "jpeg", "png", "gif", "webp", "mp3", "wav", "ogg"]
  },
  "monitoring": {
    "health_check_interval": 60,
    "performance_metrics": true,
    "error_tracking": true,
    "log_retention_days": 30
  },
  "deployment": {
    "auto_restart": true,
    "graceful_shutdown": true,
    "backup_before_update": true,
    "rollback_enabled": true
  }
}
